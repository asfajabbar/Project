<?xml version="1.0" encoding="utf-8"?>
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#CDB99C"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:background="#000000"
        android:orientation="vertical"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="KETO DIET PLAN"
            android:textColor="#FFFFFF"
            android:textSize="40sp"
            android:textStyle="bold"
            android:layout_marginLeft="55dp"
            android:layout_marginTop="15dp"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="By Healthy Diet"
            android:textColor="#FFFFFF"
            android:textAllCaps="true"
            android:textSize="15sp"
            android:layout_marginTop="0dp"
            android:layout_marginLeft="125dp"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Dinner options"
            android:textColor="#FFFFFF"
            android:textAllCaps="true"
            android:textSize="20sp"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="105dp"
            />




    </LinearLayout>

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        app:srcCompat="@drawable/dinner"
        android:layout_marginTop="15dp"
        android:background="#CDB99C"/>
    <Button
        android:layout_width="140dp"
        android:layout_height="50sp"
        android:text="Option 1"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textAllCaps="false"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/custom_button"

        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text= " 100 grams boneless chicken Saute with spinach"
        android:textSize="20sp"
        android:layout_marginLeft="12dp"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=" Half Cup Boiled BrownRice"
        android:textSize="20sp"
        android:layout_marginLeft="12dp"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="(508 Calories P: 19g C: 52g F:6g)"
        android:textSize="20sp"
        android:layout_marginLeft="12dp"
        />
    <Button
        android:layout_width="140dp"
        android:layout_height="50sp"
        android:text="Option 2"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/custom_button"
        android:textAllCaps="false"
             />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=" 1 Cup Vegetable rice(Brown Rice)"
        android:textSize="20sp"
        android:layout_marginLeft="12dp"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=" Small serving of mixed Salad"

        android:textSize="20sp"
        android:layout_marginLeft="12dp"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=" (492 Calories P: 20g C: 92g F:4g)"
        android:textSize="20sp"
        android:layout_marginLeft="12dp"
        />
</LinearLayout>
