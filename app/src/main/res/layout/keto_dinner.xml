<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#CDB99C"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:background="#A52A2A"
        android:orientation="vertical"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="KETO DIET PLAN"
            android:textColor="#FFFFFF"
            android:textSize="40sp"
            android:textStyle="bold"
            android:layout_marginLeft="55dp"
            android:layout_marginTop="15dp"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="By Healthy Diet"
            android:textColor="#FFFFFF"
            android:textAllCaps="true"
            android:textSize="15sp"
            android:layout_marginTop="0dp"
            android:layout_marginLeft="250dp"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Dinner options"
            android:textColor="#FFFFFF"
            android:textAllCaps="true"
            android:textSize="20sp"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="105dp"
            />




    </LinearLayout>

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        app:srcCompat="@drawable/dinner"
        android:layout_marginTop="15dp"
        android:background="#CDB99C"/>
    <Button
        android:layout_width="180dp"
        android:layout_height="50sp"
        android:text="Option 1"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_marginLeft="6dp"
        android:layout_marginTop="15dp"
        android:background="#A52A2A"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Low carb lemon chicken"
        android:textSize="20sp"
        android:layout_marginLeft="12dp"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="chcikpeas(safaid channy)salad with vegetables"
        android:textSize="20sp"
        android:layout_marginLeft="12dp"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="black coffee"
        android:textSize="20sp"
        android:layout_marginLeft="12dp"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="( 400 Calories P:29 g , F: 3 g)"
        android:textSize="20sp"
        android:layout_marginLeft="12dp"
        />
    <Button
        android:layout_width="180dp"
        android:layout_height="50sp"
        android:text="Option 2"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_marginLeft="6dp"
        android:layout_marginTop="5dp"
        android:background="#A52A2A"
        android:shadowRadius="10dp"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Baked Garlic chicken with broccoli"
        android:textSize="20sp"
        android:layout_marginLeft="12dp"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Low carbs and fat yogurt"
        android:textSize="20sp"
        android:layout_marginLeft="12dp"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Lime Water"
        android:textSize="20sp"
        android:layout_marginLeft="12dp"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="( 320 Calories P:20 g , F: 12 g)"
        android:textSize="20sp"
        android:layout_marginLeft="12dp"/>






</LinearLayout>
